<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/tv_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginBottom="@dimen/dimen_view_pager_margin"
        android:layout_marginLeft="@dimen/dimen_view_pager_margin"
        android:layout_marginRight="@dimen/dimen_view_pager_margin"
        android:layout_marginStart="@dimen/dimen_view_pager_margin"
        android:layout_marginEnd="@dimen/dimen_view_pager_margin"
        android:textColor="@color/colorAccent"
        android:textSize="36sp"
        android:textAlignment="center"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="1997"/>

    <TextView
        android:id="@+id/tv_history"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="64dp"
        android:paddingLeft="@dimen/dimen_history_text_view_padding_horiz"
        android:paddingRight="@dimen/dimen_history_text_view_padding_horiz"
        android:paddingStart="@dimen/dimen_history_text_view_padding_horiz"
        android:paddingEnd="@dimen/dimen_history_text_view_padding_horiz"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="@color/color_offwhite"
        android:textAlignment="center"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@+id/tv_year"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_year"
        app:layout_constraintRight_toRightOf="@id/tv_year"
        app:layout_constraintStart_toStartOf="@id/tv_year"
        app:layout_constraintEnd_toEndOf="@id/tv_year"
        tools:text="Blahblahblahblahblah" />

</android.support.constraint.ConstraintLayout>

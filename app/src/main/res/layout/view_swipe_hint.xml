<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:alpha="0"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_arrow_left"
        app:srcCompat="@drawable/ic_keyboard_arrow_left_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/contentDesc_leftArrow"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorHint"
        android:text="@string/swipe_hint"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/iv_arrow_left"
        app:layout_constraintRight_toLeftOf="@id/iv_arrow_right"/>

    <ImageView
        android:id="@+id/iv_arrow_right"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/contentDesc_rightArrow"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>